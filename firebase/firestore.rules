rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 사용자 프로필
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // 지출/수입 엔트리
    match /entries/{uid}/{month}/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // 예산
    match /budgets/{uid}/{month} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // 정원 상태
    match /garden/{uid}/state {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // 스토어 아이템 (모든 사용자 읽기 가능)
    match /store/items/{itemId} {
      allow read: if request.auth != null;
      allow write: if false; // 서버에서만 쓰기
    }

    // 구매 내역 (서버에서만 쓰기)
    match /purchases/{uid}/{purchaseId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update, delete: if false; // 서버에서만
    }

    // CS 티켓
    match /tickets/{uid}/{ticketId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}